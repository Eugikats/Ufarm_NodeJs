br  
.container.col-md-6
  .card
    .card-body
      .form-floating.d-grid.gap-2
      h1.card-title.text-center.mb-3 Login Page
      form(action='/ao_login', method='POST')
        .mb-3
          label.form-label(for='email') Email:
          input#email.form-control(type='text', name='email')
        .mb-3
          label.form-label(for='password') Password:
          input#password.form-control(type='password', name='password')
        .mb-3
          label.form-label(for='role') Role:
          select#role.form-select(name='role')
            option(value='') Select a role
            option(value='AO') AO
            option(value='UF') UF
            option(value='FO') FO
            option(value='Customer') Customer
        a(href='/login', role='button', style='color: black; margin:10px;') Back    
        button.btn.btn-success(type='submit') Login
        
// Bootstrap JS
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js')
