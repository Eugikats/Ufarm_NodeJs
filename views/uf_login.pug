doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title UF Login Page
  // Bootstrap CSS
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
  // Custom styles
  style.
    body {
    background-color: #f8f9fa;
    }
    .card {
    width: 400px;
    margin: 0 auto;
    margin-top: 50px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
    }
header
  // nav starts here
  div(w3-include-html='/includes/navbar.html')
  // nav ends her
.card
  .card-body
    h5.card-title Urban Farmer Login
    form#regForm(action='/uf_login', name='login', method='POST')
      .mb-3
        label Unique Number
        input#uniquenumber.form-control(name='uniquenumber', placeholder='Eg.UF-001')
        small#uniquenoErr
      .mb-3
        label(for='password') Password
        input#password.form-control(type='password', name='password')
        small#passErr
        button.btn.btn-success(type='submit') Submit
// Bootstrap Bundle with Popper
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
script(src='/custom-js/custom.js')
  includeHTML()
