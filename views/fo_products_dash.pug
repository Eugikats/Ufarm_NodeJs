doctype html

head

  meta(charset='UTF-8')

  meta(http-equiv='X-UA-Compatible' content='IE=edge')

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title FO dashboard

.container
  h3 Welcome back!
  br
  br
  br
  -//button logs you out and sends you to the login page
    
  fieldset 
    table.table
        thead.thead-dark
            tr

                th(scope='col') Product name
                th(scope='col') Ward
                th(scope='col') Upload date
                th(scope='col') Unit price
                th(scope='col') Quantity
                th(scope='col') Farm directions
                th(scope='col') Produce type
                
                
                
        tbody
            
            each product in data
                tr          
                    td #{product.productname}
                    td #{product.ward}
                    td #{product.uploaddate}
                    td #{product.unitprice}UGX per #{product.unit}
                    td #{product.quantity}
                    td #{product.farmdirections}
                    td #{product.producetype}
                    
                        
                            //- we send info to the backend through forms
                         
            else
                p There are no Urban Farmers in the database 
    
            

           

            


