doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  title Urban Farmer registration
  link(href='/css/bootstrap-5.3/css/bootstrap.css', rel='stylesheet')
  link(rel='stylesheet', href='	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
  style.
    input,
    select {
    display: block;
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    font-size: 0.9rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    }
    label{
    float: left;
    }
header
  // nav starts here
  //- include ../assets/includes/navbar.pug
  // nav ends her
main
  .container
    .col-md-8.mx-auto.text-center
      .card
        .card-header
          | Urban Farmer registration
        .card-body
          .container-fluid(style='padding-left: 50px;')
            div(style='border: 1px;')
              form#regForm(action='/uf_edit?id='+uf._id, name='register', method='POST')
                fieldset
                  legend Personal Information
                  .form-group
                    label(for='first-name') First Name:
                    input#first-name.form-control(type='text', name='firstname' disabled)
                    small#fnameErr
                  .form-group
                    label(for='last-name') Last Name:
                    input#last-name.form-control(type='text', name='lastname' disabled)
                    small#lnameErr
                  .form-group
                    label(for='othernames') Other Names:
                    input#other-names.form-control(type='text', name='othernames' disabled)
                  .form-group
                    label(for='gender') Gender:
                    select#gender(name='gender' disabled)
                      option(value='') --Please select--
                      option(value='Male') Male
                      option(value='Female') Female
                    small#genderErr
                  .form-group
                    label(for='dob') Date of Birth:
                    input#dob.form-control(type='date', name='dob' disabled)
                    small#dobErr
                  .form-group
                    label(for='ward') Represented Ward:
                    select#ward(name='ward')
                      option(value='') --Please select--
                      option(value='North') North
                      option(value='East') East
                      option(value='West') West
                      option(value='South') South
                    small#wardErr
                  .form-group
                    label(for='activities') Activities Undertaken:
                    select#activities(name='activities')
                      option(value='') --Please select--
                      option(value='Horticulture') Horticulture
                      option(value='Dairy') Dairy
                      option(value='Poultry') Poultry
                    small#activityError
                  .form-group
                    label(for='phone') Phone Number:
                    input#phone.form-control(type='tel', name='phonenumber', pattern='[0-9]{10}')
                    small#phoneErr
                  .form-group
                    label(for='nin') NIN (Number):
                    input#nin.form-control(type='text', name='nin' disabled)
                    small#ninErr
                  .form-group
                    label Unique Number
                    input#uniquenumber(name='uniquenumber', placeholder='Eg.UF-001' disabled) 
                    small#uniquenoErr
                  label Password
                  input#password.form-control(type='password', name='password' disabled)
                  small#passErr
                  button#submit.btn.btn-success.btn-block UPDATE
footer
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js', integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN', crossorigin='anonymous')
script(src='/js/custom-js/custom.js')
  includeHTML()
script(src='/js/uf_auth.js')
