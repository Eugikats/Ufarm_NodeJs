doctype html
head
  title Agricultural Officer registration
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
  // <link href="/css/bootstrap-5.3/css/bootstrap.css" rel="stylesheet">
  link(rel='stylesheet', href='	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
header
  // nav starts here
  include ../assets/includes/navbar.pug
  // nav ends her
  br
  br
  br
.container.d-flex.justify-content-center.align-items-center.vh-100
  .card.shadow
    .card-body
      form#regForm(action='/ao_register' name='register' onsubmit='return Validate();' method='POST')
        fieldset
          .form-group
            label(for='firstname') First Name
            input#fname.form-control(type='text', name='firstname')
            small#fnameErr
          .form-group
            label(for='lastname') Last Name
            input#lname.form-control(type='text', name='lastname')
            small#lnameErr
          .form-group
            label(for='othernames') Other Names
            input#othernames.form-control(type='text', name='othernames', placeholder='Not required')
          .form-group
            label(for='phone') Phone Number
            input#phone.form-control(type='tel', name='phone', pattern='[0-9]{10}')
            small#phoneErr
          .form-group
            label(for='email') Email Address
            input#email.form-control(type='email', name='email')
            small#emailErr
          .form-group
            label(for='address') Address
            textarea#address.form-control(name='address')
            small#addressErr
          .form-group
            label(for='password') Password
            input#password.form-control(type='password', name='password')
            small#passErr
          .form-group(style='margin: 10px;')
            label(for='gender') Gender:
            select#gender(name='gender')
              option(value='') -select one-
              option(value='Male') Male
              option(value='Female') Female
            small#genderErr
          button#submit.btn.btn-primary.btn-block Register 
style.
  .card {
  width: 400px;
  }
script(src='./customer_auth.js')
script(src='/assets/css/bootstrap-5.3/js/bootstrap.bundle.js')

