doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href='/css/custom.css' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ', crossorigin='anonymous')
  title Title
header
   
include ../assets/includes/navbar.pug
    
main
  .container-fluid
    big Products
    hr
    .row
      each product in data
        .card.col-md-4.mx-3.my-2(style='width: 16rem;')
          img.card-img-top(src=product.productimage, alt='...')
          .card-body
            p.card-text
              | #{product.productname}
              br
              | #{product.unitprice} UGX per #{product.unit}
              br
              | Located in #{product.farmdirections}
              br
              .dropdown
                button#orderDropdown.btn.btn-success.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false')
                  | Order
                ul.dropdown-menu(aria-labelledby='orderDropdown')
                  li
                    a.dropdown-item(href="/mailin/"+product.id)
                      i.bi.bi-mailbox2
                      |  Mail-in
                  


footer
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe', crossorigin='anonymous')
  includeHTML()
