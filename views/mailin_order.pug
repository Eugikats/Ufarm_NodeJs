main
.container 
      .container.my-5
        .row.justify-content-center
          .col-md-8
            form(method="post" action="/order")
              .form-group
                label(for="productName") Product Name
                input#productName.form-control(type="text" name="productName" value=product.productname readonly)
              .form-group
                label(for="productPrice") Unit Price
                input#productPrice.form-control(type="text" name="productPrice" value=product.unitprice readonly)
              .form-group
                  label(for="quantity") Quantity
                  input#quantity.form-control(type="number" name="quantity" onchange="calculateTotal()" value="1")
              .form-group
                  label(for="totalPrice") Total Price
                  input#totalPrice.form-control(type="text" name="totalPrice" value=product.unitprice readonly)
              .form-group
                label(for="buyerName") Buyer Name
                input#buyerName.form-control(type="text" name="buyerName")
                small#buyerNameErr.form-text.text-danger
              .form-group
                label(for="buyerLocation") Buyer Location
                input#buyerLocation.form-control(type="text" name="buyerLocation")
                small#buyerLocationErr.form-text.text-danger
              button#submitOrderBtn.btn.btn-success(type="submit") Submit Order
script.
                  function calculateTotal() {
                    var quantity = document.getElementById('quantity').value;
                    var unitPrice = document.getElementById('productPrice').value;
                    var totalPrice = quantity * unitPrice;
                    document.getElementById('totalPrice').value = totalPrice;
                  }             

