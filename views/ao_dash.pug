doctype html

head

  meta(charset='UTF-8')

  meta(http-equiv='X-UA-Compatible' content='IE=edge')

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title AO dashboard

.container
  h3 Welcome back!
  br
  -//button logs you out and sends you to the login page
  a.btn.btn-success(href='/fo_register', role='button', style='background-color: green;') Add Farmer One 
  br
  br
  form(action="/logout" method="POST")
    button.btn-dark(type="submit" width="100px" href='/logout') Signout
  br
  fieldset 
    table.table
        thead.thead-dark
            tr

                th(scope='col') Firstname
                th(scope='col') Lastname
                th(scope='col') Othernames
                th(scope='col') Ward
                th(scope='col') Gender
                th(scope='col') DOB
                th(scope='col') Age
                th(scope='col') Ward
                th(scope='col') Activity Undertaken
                th(scope='col') Uniquenumber
                th(scope='col') Phonenumber
                th(scope='col') Address
                th(scope='col') Years of residence
                th(scope='col') Residencetype
                th(scope='col') Edit

        tbody
            if fos.length
                each fo in fos
                    tr          
                        td #{fo.firstname}
                        td #{fo.lastname}
                        td #{fo.othernames}
                        td #{fo.ward}
                        td #{fo.gender}
                        td #{fo.dob}
                        - let currentDate = new Date();
                        - let dob = new Date(fo.dob);
                        - let ageInMs = currentDate - dob;
                        - let ageInYears = Math.floor(ageInMs / (365 * 24 * 60 * 60 * 1000));
                        td #{ageInYears}
                        td #{fo.ward}
                        td #{fo.activities}
                        td #{fo.uniquenumber}
                        td #{fo.phonenumber}
                        td #{fo.address}
                        td #{fo.yor}
                        td #{fo.residencetype}
                        //- we send info to the backend through forms
                        form(method="post" )
                        td 
                          a.btn.btn-dark.btn-block(href="/fo_edit/"+fo.id) Edit
                        //-   action="/students/delete"
                            input(type="hidden", name="id", value=student.id)
                            //- button.btn.btn-danger(type="submit") Delete
                        //- 
            else
                p There are no Farmer Ones in the database 


           

            


